extends ../layout

block content
  h1.text-center.mb-4 Products
  .mb-4
    a.btn.btn-success(href="/products/new") Add New Product

  .row.custom-gap
    each product in products
      .col-md-4.mb-4
        .card.shadow-sm
          .card-body
            h5.card-title #{product.name}
            p.mb-1 ID: #{product.id}
            p.mb-1 Price: $#{product.price.toFixed(2)}
            p.mb-3 Stock: #{product.stock}
            .button-group
              a.btn.btn-info(href=`/products/${product.id}`) View
              a.btn.btn-warning(href=`/products/${product.id}/edit`) Edit
              form(action=`/products/${product.id}?_method=DELETE`, method="POST")
                button.btn.btn-danger(type="submit") Delete
